<!-- res/drawable/custom_radio_button.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <!-- Gradient background for checked state -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startX="0"
                        android:startY="50"
                        android:endX="100"
                        android:endY="50"
                        android:centerX="50%"
                        android:centerY="50%"
                        android:centerColor="?attr/colorAccent"
                        android:startColor="?attr/colorPrimary"
                        android:endColor="?attr/colorSecondary"
                        android:type="linear"
                        />
                    <size android:width="24dp" android:height="24dp" />
                </shape>
            </item>
            <!-- Check icon for checked state -->
        </layer-list>
    </item>
    <item android:state_checked="false">
        <!-- Transparent background for unchecked state -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <size android:width="24dp" android:height="24dp" />
        </shape>
    </item>
</selector>
